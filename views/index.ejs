<%- include('parts/header') %>


<!--start fullpage-->
<div id="fullpage">

  <% if(validationErrors) { %>
  <p class="alert alert-danger">
    <%= validationErrors.msg%>
  </p>
  <% } %>

  <!--start HomeProductItem-->

  <% if(products.length == 0 ){%>
  <div class="alert alert-danger">
    there is no products
  </div>
  <% } else { %>
  <% for(let product of products) {%>
  <section class="HomeProductItem section">

    <!--start HomeProductItem-ctn-->
    <div class="HomeProductItem--ctn">

      <!--start HomeProductItem--nav -->
      <nav class="HomeProductItem--nav">
        <ul>
          <li class="nav_icon"><a href="#"><i class="fas fa-search"></i></a></li>
          <li><a href="#">home</a></li>

          <li><a href="#">cart</a></li>

          <li><a href="#">order</a></li>

        </ul>
      </nav>
      <!--end HomeProductItem--nav -->



      <!--start HomePage-main-Content -->
      <section class="HomePage-main-Content">
        <h3>stepup</h3>


        <div class="product_wraper">
          <div class="imges">

            <img class="shoes" src="<%= product.image_name%>">
            <h2 class="product_name"><%= product.name%></h2>

          </div>

          <div class="text_wraper">
            <h3 class="selling_price"><%= product.price%>EGP</h3>
            <div class="btn">
              <a class='add_to_cart add_to_cart_btn' onclick="show_productUI(this)" href="#">
                <span></span>
                <span></span>
                <span></span>
                <span></span>
                <span></span>
                Add To Cart
              </a>
            </div>
          </div>

          <!--start ui_product -->
          <div class="ui_product display_none">
            <div class="ui_card">
              <a onclick="exit_addToCart_fun(this)" id="add_to_cart_ex_btn"><i class="fas fa-times"></i></a>
              <div class="imgBox">
                <img src="<%= product.image_name%>">
              </div>
              <div class="contentBox">
                <h4><%= product.name %></h4>

                <form action="/cart" method="POST">
                  <div class="size">

                    <h4>Size :</h4>
                    <select name="size">

                      <% for(let i = 0 ; i < product.size.length ; i++ ){ %>
                      <option value="<%= product.size[i]%>"><%= product.size[i]%></option>
                      <% } %>


                    </select>
                  </div>

                  <div class="color">
                    <h4>color :</h4>
                    <label class="radio-btn-ctn">
                      <input type="radio" checked="checked" name="color" value="<%=product.first_color %>">
                      <span class="checkmark" style="background-color: <%= product.first_color %> "></span>
                    </label>
                    <label class="radio-btn-ctn">
                      <input type="radio" name="color" value=" <%=product.second_color %>">
                      <span class="checkmark" style="background-color: <%= product.second_color %> "></span>
                    </label>
                    <label class="radio-btn-ctn">
                      <input type="radio" name="color" value="<%=product.third_color %>">
                      <span class="checkmark" style="background-color: <%= product.third_color %> "></span>
                    </label>

                  </div>



                  <input type="hidden" name="name" value="<%= product.name %>">
                  <input type="hidden" name="price" value="<%= product.price %>">
                  <input type="hidden" name="productId" value="<%= product._id %>">
                  <input type="hidden" name="image_name" value="<%= product.image_name%>">
                  <input type="hidden" name="redirectTo" value="/">
                  <input type="hidden" value="1" name="amount" class="form-control">
                  <a href="#"><input type="submit" value="Buy Now"> </a>
                  <span class="priceTage"><%= product.price %> EG</span>

                </form>

              </div>
            </div>
          </div>

          <!--end ui_product -->




        </div>







        <div class="description_text_wraper">
          <p class="product_description">
            <%= product.description%>

          </p>
        </div>



      </section>
      <!--end HomePage-main-Content-->

    </div>
    <!--end HomeProductItem-ctn-->

  </section>
  <!--end HomeProductItem-->
  <%}%>


                      <%}%>
</div>
<!--end fullpage-->









<%- include('parts/footer') %>