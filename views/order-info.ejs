<%- include('parts/header') %>
<%- include('parts/navbar') %>


<div class="orderInfoPage">

    <div class="container">
        <section class="all-order-info">
            <div class="order-Progress">
                <% console.log("orderFullInfo",orderFullInfo) %>
                <div class="order-Progress-wraper">
                    <h2><span>order</span> ng123213213</h2>
                    <div class="orderProgressBar">
                        <div class="on-process activeProgress">
                            on process
                            <i class="far fa-check-circle"></i>
                        </div>

                        <div class="accepted ">
                            accepted
                            <i class="far fa-check-circle"></i>
                        </div>

                        <div class="in-delivery">
                            in delivery
                            <i class="far fa-check-circle"></i>
                        </div>

                        <div class="delivered">
                            delivered
                            <i class="far fa-check-circle"></i>
                        </div>
                    </div>

                </div>

            </div>


            <div class="orderInfo">

                <div class="orderInfo-wraper">

                    <div class="order-summary">
                        <h3>bill summary</h3>
                        <div class="order-bill">
                            <span>sub total</span>
                            <span><%= orderFullInfo[0].orderInfo.subTotal %> EGP</span>
                            <span>shipping cost</span>
                            <span><%= orderFullInfo[0].orderInfo.ShippingCost %> EGP</span>

                        </div>


                        <div style="width: 70%; margin:10px 0 ;height:0.8px; background-color:rgba(0, 0, 0, 0.1)">

                        </div>
                        <div class="order-total-price-wraper">
                            <span class="order-total-pricelabel">total</span>
                            <span class="order-total-price"><%= orderFullInfo[0].orderInfo.CartTotal %> EGP</span>
                        </div>




                    </div>


                    <div class="payment-method">
                        <h3>payment method</h3>
                        <p>payment on deliver</p>
                    </div>

                    <div class="orderShippingInfo">

                        <h3>shipping address</h3>
                        <hr style="width: 20%;">
                        <p><%= orderFullInfo[0].buyerInfo.addressLine1 %></p>
                        <hr style="width: 80%;">
                        <p><%= orderFullInfo[0].buyerInfo.addressLine2 %></p>
                        <hr style="width: 80%;">
                        <p><%= orderFullInfo[0].buyerInfo.mobileNumber %></p>
                    </div>

                </div>

            </div>
        </section>
    </div>




    <section class="order-products">

        <div class="container">
            <div class="order-products-wraper">


                <h3>product that you order</h3>
                <hr>

                <% for(let i = 0 ; i < orderFullInfo[0].item.length ;i++){ %>

                <%
                    let zz = '/' + orderFullInfo[0].item[i].image_name
                    console.log(orderFullInfo[0].item[i]) 
                %>
                <div class="order-product">
                    <img src=" <%= zz %>" style="width: 100px;">
                    <div class="product-info-wraper">
                        <h4><%=  orderFullInfo[0].item[i].name %></h4>
                        <p><%=  orderFullInfo[0].item[i].name %> </p>
                        <div class="">


                        </div>
                    </div>

                    <div class="product-spec">
                        <p>size: <%=  orderFullInfo[0].item[i].size %> </p>
                        <p>color : <span class="order-product--color"
                                style="background-color: <%= orderFullInfo[0].item[i].color%>"></span>
                        </p>
                    </div>

                    <div class="product-price">
                        <h3><%=  orderFullInfo[0].item[i].price %> EGP</h3>

                        <p> QTY <%=  orderFullInfo[0].item[i].amount %></p>


                    </div>



                </div>
                <% } %>

            </div>

        </div>
    </section>
</div>


<%- include('parts/footer')%>